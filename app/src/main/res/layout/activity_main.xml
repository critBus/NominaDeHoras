    <Button
        android:id="@+id/bt_ver_nominas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:onClick="apretoEnNominas"
        android:text="Nominas"
        android:textSize="24sp"
        mask:layout_constraintLeft_toLeftOf="parent"
        mask:layout_constraintRight_toRightOf="parent"
        mask:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_calculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:onClick="apretoEnCalcular"
        android:text="Calcular"
        mask:layout_constraintLeft_toLeftOf="parent"
        mask:layout_constraintRight_toRightOf="parent"
        mask:layout_constraintTop_toBottomOf="@+id/bt_ver_nominas"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Spinner
        android:id="@+id/spn_tiposDeLetras"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        mask:layout_constraintTop_toBottomOf="@+id/bt_calculo"
        tools:layout_editor_absoluteX="8dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="280dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:max="50"
        mask:layout_constraintTop_toBottomOf="@+id/spn_tiposDeLetras"
        android:layout_marginLeft="8dp"
        mask:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        mask:layout_constraintRight_toRightOf="parent" />
